@model IEnumerable<MagicVilla_Web.Models.DTO.CustomerDTO>
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Customer list</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Customer" asp-action="CreateCustomer" class="btn btn-outline-primary">Create New Customer</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>
                        <a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-villaId="@item.Id" class="btn btn-success"><i class="bi bi-file-earmark-plus-fill"></i></a>
                        <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-villaId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>